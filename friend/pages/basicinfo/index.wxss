@import '../../utils/font2.wxss';
.tapbar{
  margin-top: 20rpx;
	background-color: #fff;
	padding-left: 30rpx;
  clear: both
}
.pt0{margin-top: 0}

.h-180{
  height: 180rpx;
}
.h-90{
  height: 90rpx;
  line-height: 90rpx;
}

.user-info{
	background-color: #fff;
  height: 180rpx;
}
.user-info image{
	display: block;
	width: 130rpx;
	height: 130rpx;
	border-radius: 50%;
}
.user-info .user-avatar{
  width: 130rpx;
  height: 180rpx;
  float: left;
  left: 30rpx;
  display: flex;
  display: -webkit-flex;
  justify-content:center;
  align-items:center;
}
.one-line-dot{
    display: inline-block;
    width: 300rpx;
    line-height:25rpx;
    overflow:hidden; 
    text-overflow:ellipsis;
    white-space:nowrap;
}
.cell input{
  display: inline-block;overflow:visible; 
  width: 300rpx;
}
.cell{
  display: flex;
  display: -webkit-flex;
  align-items:center;
  flex-direction: row;
  color: #000;
}
.cell .left{
  width: 50%;
}
.cell .go{
  width: 500rpx;
  display: flex;
  display: -webkit-flex;
  justify-content:center;
  flex-direction: column;
  padding-right: 30rpx;
  color: #cccccc;
  text-align:right;

}
.cell .go .num{color: #cccccc}
.arrow{
  display: inline-block;
  transform:scaleY(1.5);
  padding-left: 10rpx;
 
}
.capsule{
  width: 150rpx;
  height: 45rpx;
  line-height: 45rpx;
  border-radius: 10rpx;
  display: inline-block;
  text-align: center
}
.tobe{
  background: #cccccc;
  color: #fff;
}
.had{
  background: #0092ff;
  color: #fff;
}
.blue{
  color: #0092ff
}
.border-bottom{
  border-bottom:1px solid #f5f5f5;
}

picker {
  display:inline-block;
}

.label-containar{
  margin: 50rpx 30rpx;
}
.label-containar .label-header{
  margin-bottom: 50rpx;
  color: #000000;
  font-weight:bolder;
}
.label-containar .label-type{
}
.label-containar .label-type .label-type-text{
  margin-bottom: 30rpx;
  margin-top: 20rpx;
}
.label-containar .label-type .label{
  display: inline-block;
  padding: 20rpx 25rpx;
  border-radius: 6rpx;
  margin: 0rpx 27rpx 40rpx 0rpx;
}
.bg-blue{background: #0092ff;color: #fff}
.bg-gyay{background: #f5f5f5;color: #000}
.label-num{color: #0092ff;padding-left: 20rpx}
.bottom{
  background-color: #f2f2f2;
  height: 130rpx;
}
.btn-area{
  position: fixed;
  width: 690rpx;
  bottom: 20rpx;
  left: 30rpx;
  z-index: 999;
  box-shadow:0px 0px 10px 2px #cccccc;
}
.btn-area button{
  margin-left: 0;
}

