<!--pages/my/index.wxml-->
<view class="container font-11pt">
    <view>
      <view class='tapbar mt0'>
        <navigator url="/pages/privacyset/index" hover-class="navigator-hover">
          <view class='cell border-bottom'>
            <view class='left'>
            <text>隐私设置</text>        
            </view> 
            <view class='go'>
              <view>
                <text class='arrow'> ></text> 
              </view>  
            </view>  
          </view>
        </navigator>

        <navigator url="/pages/changepassword/index" hover-class="navigator-hover">
          <view class='cell border-bottom'>
            <view class='left'>
            <text>修改密码</text>        
            </view> 
            <view class='go'>
              <view>
                <text class='arrow'> ></text> 
              </view>  
            </view>  
          </view>
        </navigator>

        <navigator url="/pages/suggest/index" hover-class="navigator-hover">  
          <view class='cell border-bottom'>
            <view class='left'>
            <text>意见反馈</text>        
            </view>        
            <view class='go'>
              <view>
                <text class='arrow'> ></text> 
              </view>  
            </view>  
          </view>
        </navigator> 

        <navigator url="/pages/about/index" hover-class="navigator-hover">  
          <view class='cell'>
            <view class='left'>
            <text>关于我们</text>        
            </view>          
            <view class='go'>
              <view> 
                <text class='arrow'> ></text> 
              </view>  
            </view>  
          </view>
        </navigator>
    
      </view>

      <view class='tapbar'>
        <view class='cell'><button class='logout-btn font-12pt' bindtap='logout'>退出登录</button></view>
      </view>
    </view>

</view>
