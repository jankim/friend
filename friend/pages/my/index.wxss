/* pages/my/index.wxss */
.tapbar{
  margin-top: 20rpx;
	background-color: #fff;
	padding: 0 30rpx;
  clear: both
}

.navigator-hover{
  background: #fff
}

.user-info{
	background-color: #fff;
  height: 250rpx;
  
}
.user-info image{
	display: block;
	width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
	box-shadow: 0 0 20rpx rgba(0,0,0,.2)
}
.user-info .user-avatar{
  width: 190rpx;
  height: 250rpx;
  float: left;
  left: 30rpx;
  display: flex;
  display: -webkit-flex;
  justify-content:flex-start;
  align-items:center;
}

.user-info .edit-user{
  margin-left: 40rpx;
  height: 250rpx;
  display: flex;
  display: -webkit-flex;
  justify-content:flex-start;
  flex-direction: row;
}

.user-info .edit-user2{
  width: 480rpx;
  height: 250rpx;
  display: flex;
  display: -webkit-flex;
  justify-content:center;
  flex-direction: column
}
.user-info .edit-user .go{
  float: right;
  height: 250rpx;
  display: flex;
  display: -webkit-flex;
  justify-content:center;
  flex-direction: column;
  color: #cccccc;
}
.user-info .edit-user text{
	display: block;
	text-align: left;
  padding: 10rpx 0;
 
}
.user-info .edit-user .nickName{
  color: #414141;
	font-size: 22px; 

}
.user-info .edit-user .edit-des{
  color: #aaaaaa;
  font-size: 16px; 
}

.cell{
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 16px;
  color: #414141;
}
.cell .left{
  width: 90%;
}
.cell .go{
  width: 150rpx;
  display: flex;
  display: -webkit-flex;
  justify-content:center;
  flex-direction: column;
  color: #cccccc;
  text-align:right;

}
.cell .go .num{color: #aaaaaa}
.arrow{
  display: inline-block;
  transform:scaleY(1.5);
  padding-left: 10rpx;
}
.capsule{
  width: 150rpx;
  height: 45rpx;
  line-height: 45rpx;
  border-radius: 10rpx;
  display: inline-block;
  text-align: center
}
.tobe{
  background: #cccccc;
  color: #fff;
}
.had{
  background: #0092ff;
  color: #fff;
}
.blue{
  color: #0092ff
}
.border-bottom{
  border-bottom:1px solid #ebebeb;
}
.share::after {
  border: 0;
}
.share{
color:#414141;
background-color:#fff;
text-align: left;
font-size:16px;
padding: 0;
line-height: 100rpx;
}








