<view class="content font-10pt">
    <view class = "logo">
        <image mode="aspectFit" src="/images/Hello.png"></image>
    </view>
    <form bindsubmit="formSubmit">
        <view class="input-area">
          <input id="username" placeholder-class="phcolor" name="username" maxlength='30' type="text" placeholder="用户名"/>
          <input id="password" placeholder-class="phcolor" name="password" maxlength='20' type="password" placeholder="密码" />
        </view>
        <view class="btn-area">
            <button  disabled="{{registDisabled}}" formType="submit"  loading="{{btnLoading}}"> {{registBtnTxt}} </button>
            <view class="txt-area">
               <navigator redirect url="../index/index"><text class="register">回到首页</text></navigator>
               <navigator redirect url="../loginbymobile/index"><text class="register">忘记密码</text></navigator>
            </view>
        </view>
    </form>
</view>
