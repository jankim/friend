/**index.wxss**/
@import '../../utils/refreshView.wxss';
@import '../../utils/wux-components/wux.wxss'; 
.item-style{  
  padding: 30rpx;  
  font-size: 40rpx;  
  text-align: center;  
  border-top: 2rpx solid #eee;  
}  
.container {
  background-color: #fff;
  min-height: 100%;
}
.swiper-container{
  width: 750rpx;
  position: relative;  
}


::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}


.goods-box{
  display: inline-block;

  /* height: 472rpx; */
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 24rpx;
}
.goods-box .img-box{
  width: 339rpx;
  height: 339rpx;
  overflow: hidden;
}
.goods-box .img-box image{
   width: 339rpx;
   height: 339rpx;
   animation:fadeShow 1s;

}
.goods-box .goods-title{
  width: 280rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0 0rpx 0;
  color:#000;
  margin-left: 24rpx;
}
.goods-box .goods-price{
  width: 280rpx;
  overflow: hidden;
  font-size: 24rpx;
  padding: 24rpx 0;
  color:#e64340;
  margin-left: 24rpx;
}
.no-more-goods{
  text-align: center;
  font-size: 24rpx;
  padding-bottom:48rpx; 
  color: #999;
}

.wux-filterbar__bd{
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  position:relative;
  width:150rpx;
  right:-30rpx;
  float:right;
  top:100rpx;
  filter:alpha(opacity=50);
  background-color:rgba(0, 0, 0, 0.3);
  border-radius:100rpx;
  padding-left:20rpx;
  color:white;
  padding-right:20rpx;
}
.page{
  position: absolute;
  width: 100%;
}

.show_swiper{
  background-color:#fff;
  overflow:hidden;
  margin-top:40rpx;
}

.show_swiper_list {
  height: 326rpx;
}
.swiper_item {
  float: left; 
}
