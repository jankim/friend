image{
  width: 100%;
  border-radius: 15rpx;
  height:326rpx;
  /* box-shadow: 5rpx 5rpx 15rpx 5rpx #666 */
}


.nav{
  display: -webkit-flex; /* Safari */
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}
.nav .nav-item{
  display: -webkit-flex; /* Safari */
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25%;
  background: #e64340;
  margin: 10rpx;
  height: 100rpx;
}

.waterfall{
  margin: 30rpx 30rpx 0 30rpx;
  box-sizing: border-box;
}
.waterfall .view {
  width: 48%;
  display: inline-block;
  vertical-align: top;
}
.waterfall .view view{
   margin-bottom: 15rpx; 

}
.waterfall text{
  text-align: center;
  width: 100%;
  padding: 0 10rpx;
  box-sizing: border-box;
  background-color: #fff;
  height: 68rpx;
  line-height: 68rpx;
  display: inline-block;
  font-size: 24rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  color: #646464;
}

