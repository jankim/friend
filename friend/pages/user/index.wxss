@import '../../utils/font.wxss';
@import '../../utils/wux-components/wux.wxss'; 
.page{background: #f5f5f5;min-height: 100vh;margin-bottom: 97rpx;}
.container{
  width: 720rpx;
  flex-direction: column;
  margin-bottom: 15rpx;
  background: #fff;
  background-color: #fff;
}
.bottom-border{border-bottom: 1px solid #f5f5f5}
.container .title{
  background-color: #fff;
  padding:40rpx 0rpx 20rpx 0rpx;
  font-weight: bold;
}
.message-btn{position: fixed;height: 95rpx;border-top: 1rpx solid #cccccc;bottom:0rpx;width:100%;z-index: 999;color: #666666;}
.message-btn button{display:flex;justify-content:center;border-radius:0px;line-height: 95rpx;height: 100%;background: #fff;}
.flex{
  display: flex;
  display: -webkit-flex;
}
.pd-lr-30{
  padding-left: 30rpx;
}

.user-area .avatar-container{
  justify-content: center;
  align-items: center;
  text-align: center;
  margin-top: 40rpx;
  color: #676767;
}
.user-area .detail-container{
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
.user-area .follow,.user-area .fans{
  flex-direction: column;
} 
.user-area .num{
  font-weight: bold;
  color: #000;
}
.item{
  flex: 1
}
.item-a{ 
  width: 150rpx;
}
.item-b{width: 100%;}

.avatar-container .avatar image{
	display: inline-block;
	width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
}
.user-area{width: 750rpx;}
.user-area .detail-container .name{
  align-items: center;
  color: #000;
  font-weight: bolder;
}
.bond{font-weight: bolder}
.user-area .detail-container .icon{
  padding-left: 10rpx;
}
.user-area .detail-container .gender-birthday{
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  text-align:center;
}
.user-area .detail-container .gender-birthday .item{flex:1 0 100rpx;}
.user-area .detail-container .gender-birthday .capsule{
  background: #00b1ff;
  color: #fff;
  margin: 0 5rpx;
  padding: 8rpx 0rpx;
}
.user-area .detail-container .focus-btn{margin: 40rpx 0rpx;}
.user-area .detail-container .focus-btn .capsule{
  background:#00b1ff;
  color:#fff;
  padding:15rpx 50rpx;
}

.user-area .detail-container .focus-btn .focus{
  background:#fff;
  color:#cccccc;
  padding:15rpx 50rpx;
}
.album-area .album{width:100%;overflow:hidden;position: relative;padding-bottom: 20rpx; }
.album .more{position: absolute;bottom: 0rpx;right: 0rpx; justify-content: 
center;align-items: center;height: 222rpx;width: 222rpx;background-color: rgba(0,0,0,.3);color: #fff}
.album-area .album-item{
  position: relative;
  width:222rpx;
  height:222rpx;
  margin-right: 12rpx;
  box-sizing:content-box;
  display:inline-block;
  overflow: hidden;
}
.album-area .album-item:nth-child(3n){margin-right: 0rpx;}
.album-area .album-item image{height: 222rpx;width: 222rpx;}

.noselect{color: #999999; }
.basic .flex,.secret .flex{height: 85rpx;line-height: 85rpx; color: #333333;}
.basic .item-b,.secret .item-b{color: #999999}

.label-area .label{ flex-wrap: wrap;}
.label-area .capsule{
  padding:10rpx 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background:#f5f5f5;
  color:#333333;
}
.label-area{padding-bottom:40rpx;}
.label-area .label-type{margin-bottom: 20rpx;}
.label-area .title{padding-top: 0rpx; }
.label-area .label-type:nth-child(1) .title{padding:40rpx 0rpx 20rpx 0rpx;}

.report-picker{height:190rpx;line-height:70rpx;text-align:center;color:#cccccc;margin-bottom: 97rpx;}
.report-picker .picker{display:inline-block;border-bottom:1px solid #cccccc;height:40rpx;line-height:40rpx;}

.message{color:#00b1ff;padding-right:5rpx;}


