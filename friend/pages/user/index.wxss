@import '../../utils/font.wxss';
.page{background: #f5f5f5;min-height: 100vh}
.container{
  flex-direction: column;
}
.flex{
  display: flex;
  display: -webkit-flex;
}

.user-area .avatar-container{
  justify-content: center;
  align-items: center;
  text-align: center;
  margin-top: 40rpx;
  font-size: 26rpx;
  color: #676767;
}
.user-area .detail-container{
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
.user-area .follow,.user-area .fans{
  flex-direction: column;
} 
.user-area .num{
  font-size: 40rpx;
  font-weight: bold;
  color: #000;
}
.item{
  flex: 1
}

.avatar-container .avatar image{
	display: inline-block;
	width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
	box-shadow: 0 0 20rpx rgba(0,0,0,.2)
}
.user-area .detail-container .name{
  align-items: center;
  color: #676767;
  font-size: 30rpx;
}
.user-area .detail-container .icon{
  padding-left: 10rpx;
}
.user-area .detail-container .gender-birthday{
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  text-align:center;
}
.user-area .detail-container .gender-birthday .item{flex:1 0 100rpx;}
.user-area .detail-container .gender-birthday .capsule{
  font-size:22rpx;
  background: #00b1ff;
  color: #fff;
  margin: 0 5rpx;
  padding: 8rpx 0rpx;
}
.user-area .detail-container .focus-btn{margin: 40rpx 0rpx;}
.user-area .detail-container .focus-btn .capsule{
  font-size:26rpx;
  background:#00b1ff;
  color:#fff;
  padding:15rpx 50rpx;
}